{
  "name": "bookingapp",
  "version": "1.0.0",
  "description": "Reservation and client management application",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r dotenv/config dist/src/index.js",
    "build-start": "rm -rf dist && npm run build && npm run start",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "node -r dotenv/config -r ts-node/register node_modules/.bin/node-pg-migrate -m backend/database/migrations --tsconfig tsconfig.json",
    "db:migrate:up": "node -r dotenv/config -r ts-node/register node_modules/.bin/node-pg-migrate -m backend/database/migrations --tsconfig tsconfig.json up",
    "db:migrate:down": "node -r dotenv/config -r ts-node/register node_modules/.bin/node-pg-migrate -m backend/database/migrations --tsconfig tsconfig.json down",
    "db:migrate:create": "node-pg-migrate -m backend/database/migrations --migration-file-language ts create",
    "db:test": "node -r dotenv/config -r ts-node/register scripts/test-db-connection.ts",
    "db:test:storage": "node -r dotenv/config -r ts-node/register scripts/test-storage.ts",
    "db:test:console": "node -r dotenv/config -r ts-node/register scripts/test-console-flow.ts",
    "db:check": "node -r dotenv/config -r ts-node/register scripts/check-data.ts"
  },
  "keywords": [
    "reservation",
    "client",
    "management",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
